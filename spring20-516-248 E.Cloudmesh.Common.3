#Flat dictionaries in python are used to flatten dictionaries when dictionaries have dictionaries within them

from cloudmesh.common.Flatdict import FlatDict

data={
  "name": "Hannah",
  "address": {
    "street": "305 Mt. Rainer Drive",
    "city": "Seattle",
    "state": "WA"
   }
  }
  
flat=FlatDict(data, sep=".")
flat={
  "name": "Hannah"
  "address.street": "305 Mt. Rainer Drive",
  "address.city": "Seattle"
  "address.state": "WA"
 }
  

